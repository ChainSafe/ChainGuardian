{
  "name": "chain-guardian",
  "version": "0.0.1",
  "description": "Eth2.0 desktop validator client",
  "keywords": [
    "eth2",
    "serenity",
    "validator",
    "blockchain",
    "electron",
    "typescript"
  ],
  "main": "./dist/main.js",
  "author": {
    "name": "NodeFactory",
    "email": "info@nodefactory.io",
    "url": "https://nodefactory.io"
  },
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/nodefactoryio/ChainGuardian/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:nodefactoryio/ChainGuardian.git"
  },
  "engines": {
    "node": "^12.4.0"
  },
  "homepage": "https://github.com/nodefactoryio/ChainGuardian",
  "scripts": {
    "build-main": "cross-env NODE_ENV=production webpack --config webpack.main.prod.config.js",
    "build-renderer": "cross-env NODE_ENV=production webpack --config webpack.renderer.prod.config.js",
    "build": "yarn run build-main && yarn run build-renderer",
    "start-renderer-dev": "webpack-dev-server --config webpack.renderer.dev.config.js",
    "start-main-dev": "webpack --config webpack.main.config.js && electron ./dist/main.js",
    "start-dev": "cross-env ELECTRON=1 cross-env START_HOT=1 yarn run start-renderer-dev",
    "prestart": "yarn run build",
    "start": "cross-env ELECTRON=1 electron .",
    "lint": "eslint --color --ext .ts --ext .tsx src/ test/",
    "lint:fix": "yarn run lint --fix",
    "check-types": "tsc --noEmit",
    "pretest": "yarn run build",
    "test": "yarn run test:unit && yarn run test:components && yarn run test:e2e && yarn run test:screens",
    "test:unit": "cross-env ELECTRON=1 yarn run jest --coverage \"test/unit\"",
    "test:e2e": "cross-env ELECTRON=1 yarn run jest \"test/e2e\"",
    "test:components": "yarn run jest --ci \"test/components\"",
    "test:screens": "cross-env ELECTRON=1 yarn run jest --runInBand \"test/screens\"",
    "jest": "jest --verbose --colors",
    "pack": "yarn run build && electron-builder --dir",
    "dist": "yarn run build && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "storybook": "start-storybook -p 6006",
    "codecov": "codecov",
    "script": "node -r ts-node/register",
    "generate:validators": "yarn run script scripts/generate_interop_validators.ts"
  },
  "jest": {
    "transform": {
      "^.+\\.(js|ts|tsx)?$": "ts-jest"
    },
    "testRegex": "(/test/.+\\.spec)\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "node"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/mocks/fileMock.js",
      "\\.(s?css|sass)$": "<rootDir>/mocks/styleMock.js"
    }
  },
  "build": {
    "productName": "ChainGuardian",
    "buildDependenciesFromSource": true,
    "npmRebuild": true,
    "appId": "io.nodefactoryio.chainguardian",
    "mac": {
      "category": "your.app.category.type"
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/",
      "node_modules/",
      "package.json"
    ],
    "linux": {
      "target": "deb",
      "category": "System"
    },
    "win": {
      "target": "nsis"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
